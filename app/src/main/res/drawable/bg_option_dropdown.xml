<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/transparent" android:startColor="@color/transparent" android:type="linear" />

                    <stroke android:width="1dp" android:color="@color/gray_50" />

                    <corners android:radius="0dp" />

                    <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right|center_vertical" android:src="@drawable/downarrow" />
            </item>
        </layer-list>
    </item>

</selector>